<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_5_timer_wpf"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="_5_timer_wpf.MainWindow"
        mc:Ignorable="d" SizeToContent="WidthAndHeight"
        Title="MainWindow" Height="375" Width="540" ResizeMode="CanMinimize" Loaded="Window_Loaded">


    <StackPanel Background="#FFE4E4E4" Margin="0" Height="346" VerticalAlignment="Bottom">
        <Menu IsMainMenu="True" Margin="0" >
            <MenuItem Header="_Commands">
                <MenuItem Header="_Start" Click="Start_Click"/>
                <MenuItem Header="_Exit" Click="Exit_Click"/>
                <Separator />
            </MenuItem>
        </Menu>
    <StackPanel Orientation="Horizontal">
            <Border BorderThickness="1" BorderBrush="Black">
                <Canvas Width="300" Height="300">
                    <Canvas.Resources>
                        <Style x:Key="labelstyle">
                            <Setter Property="Control.BorderBrush" Value="Black"/>
                            <Setter Property="Control.BorderThickness" Value="1"/>
                            <Setter Property="Control.Background" Value="Gold"/>
                            <Setter Property="Control.FontFamily" Value="Consolas"/>
                            <Setter Property="Control.FontWeight" Value="Bold"/>
                            <Setter Property="Control.FontSize" Value="12"/>
                            <Setter Property="Control.HorizontalContentAlignment" Value="Center"/>
                        </Style>
                    </Canvas.Resources>
                    <Label x:Name="label1" BorderBrush="Black" Background="Gold" Content="1" FontFamily="Consolas" FontWeight="Bold" FontSize="12" HorizontalContentAlignment="Center" BorderThickness="1">
                    </Label>
                    <Label Content="2" Canvas.Left="78" Canvas.Top="40"
                           Style="{StaticResource label}"/>


                </Canvas>
            </Border>
            <StackPanel>
                <Label Content="Результаты"/>
            </StackPanel>

        </StackPanel>

    </StackPanel>
</Window>
